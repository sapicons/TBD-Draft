<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/item_clubbed_acc_ll">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_user_account"
                android:layout_margin="8dp"
                android:id="@+id/item_clubbed_account_customer_pic_iv"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_clubbed_account_customer_pic_iv"
                android:layout_centerVertical="true"
                android:text="First Last"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:id="@+id/item_clubbed_account_customer_name"
                android:layout_margin="8dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

        </RelativeLayout>


    </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>